/**index.wxss**/ 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.focus-item{

}
.bar-item{
  text-align: center;
  width:50%;
  padding:5% 0;
}
.active{
  color:green;
}
.active::after{
  content: '';
  border: 2px solid green;
  display:inline-block;
  width: 90%;
}
.usermotto {
}
.bar{
  display: flex;
  flex-direction: row; 
  justify-content:flex-center;
  width:100%;
  background-color:whitesmoke;
}
.current-bar{
  color:green;
}
.current-bar::after{
  content: '';
  border: 2px solid green;
  display:inline-block;
  width: 100%;
}
.block{
  width: 100%;
  border: 1rpx solid #ccc;
}
.meet-list{
  padding: 30rpx;
}
.meet-title{
  padding:15rpx 5rpx 20rpx;
}
.meet-owner{
  font-size: 25rpx;
  padding-bottom:10rpx;
}
.meet-summary{
  color: 	#A9A9A9;
  font-size: 26rpx;
  padding-bottom:10rpx;
}
.meet-date{
  font-size: 23rpx;
  color: 	#A9A9A9;
  margin-right:20rpx;
  text-align:right;
}
.meet-block{
  margin-top:10rpx;
  margin-bottom: 15rpx;
  background-color:#fff;
  padding: 10rpx 10rpx;
  border-radius:10rpx;
}